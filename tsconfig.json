{
	"compilerOptions": {
		"module": "CommonJS",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"target": "ES2020",
		"noImplicitAny": true,
		"moduleResolution": "Node",
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": ".",
		"declaration": true,
		"typeRoots": [
			"./@types",
			"./node_modules/@types",
		],
		"lib": [
			"ESNext",
			"ES2018.AsyncGenerator",
			"DOM",
			"DOM.Iterable",
		],
		"paths": {
			"*": [
				"node_modules/*",
				"src/types/*"
			],
		}
	},
	"include": [
		"src/**/*", "src/proxy/.ts"
	]
}